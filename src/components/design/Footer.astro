---
import { Icon } from "astro-icon/components";
import Section from "@components/Secction.astro";
import { footerData } from "@constants/index";
---

<footer class="footer">
  <div class="container">
    <Section>
      <div class="footer__grid | pt-space-3xl">
        <div class="flow">

            <h3 class="size-1">Neo.AI - Cyberpunk Website</h3>
            <p>
              Explore the high-tech, low-life world where the lines between humanity
            </p>
        </div>
     
        <ul role="list" class="footer__grid-list d-flex pl-space-0 d-flex">
          {footerData.map((section, index) => (
            <li>
              {section.title}
              <ul role="list" class="pl-space-0 size--1 mt-space-s flow">
                {section.items.map((item, subIndex) => (
                  <li><a href="#" class="text-white">{item}</a></li>
                ))}
              </ul>
            </li>
          ))}
        </ul>
        
      </div>
      <div class="footer__legal | mt-space-l-xl">
        <p>
          Â©
          Neo.AI - Pixel Punk 2024. All rights reserved.
        </p>
        <div class="footer__terms d-flex">

          <ul role="list" class="pl-space-0 d-flex">
            <li>Terms</li>
            <li>Privacy</li>
            <li>Cookies</li>
          </ul>
          <ul class="footer__social pl-space-0" role="list">
            <li class="p-space-2xs-xs rounded-full relative"><Icon name={"linkedin"} /></li>
            <li class="p-space-2xs-xs rounded-full relative"><Icon name={"facebook"} /></li>
            <li class="p-space-2xs-xs rounded-full relative"><Icon name={"twitter"} /></li>
          </ul>
        </div>
      </div>
    </Section>
  </div>
</footer>




